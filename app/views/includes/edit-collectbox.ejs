
<!--创建扫文单对话框--> 
<div class="modal fade" id="myCollect" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3 class="modal-title"><b>编辑扫文单</b></h3>
	   </div>
	   <div class="modal-body">
	   <form method="post" action="/edit/collect">
	     <input type="text" name='newcollect[id]' style="display: none"  value="<%= collection.id %>" >
	     <% if(_user!==undefined){ %> 
	     <input type="text" name='newcollect[editor]' style="display: none" value="<%= _user._id %>" >
	     <% } %>
		 <input type="text" name='newcollect[name]' value="<%=collection.name %>" >
         <input type="text" name='newcollect[description]' value="<%=collection.description %>">
		 <div class="modal-btn">
		   <button type="submit" class="btn btn-default" >确定</button>
		   <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
         </div>
       </form>
	   </div>
     </div>
  </div>
</div>