
<!--创建扫文单对话框--> 
<div class="modal fade" id="myCollect" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3 class="modal-title"><b>创建扫文单</b></h3>
	   </div>
	   <div class="modal-body">
	     <form method="post" action="/new/collect">
		 <input type="text"  placeholder="输入名称" name='newcollect[name]'>
         <input type="text"  placeholder="一句话描述文単" name='newcollect[description]' >
		 <div class="modal-btn">
		    <button type="submit" class="btn btn-default" >确定</button>
		    <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
	     </div>
         </form>
	   </div>
     </div>
  </div>
</div>